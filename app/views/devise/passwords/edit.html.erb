<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light" style="max-width: 500px; width: 500px;">
  <div class="card shadow-sm rounded-4 border-0 w-100">
    <div class="card-body p-4">
      <h2 class="text-center mb-4 fw-bold" style="font-family: 'Segoe UI', Arial, sans-serif; letter-spacing: 1px;">Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-3">
          <%= f.label :password, "New password", class: "form-label" %>
          <% if @minimum_password_length %>
            <em class="text-muted small">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control rounded-3" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3" %>
        </div>
        <div class="d-grid mb-3">
          <%= f.submit "Change my password", class: "btn btn-primary rounded-3 fw-bold px-4" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
