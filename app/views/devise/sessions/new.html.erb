<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light" style="max-width: 500px; width: 500px;">
  <div class="card shadow-sm rounded-4 border-0 w-100">
    <div class="card-body p-4">
      <h2 class="text-center mb-4 fw-bold" style="font-family: 'Segoe UI', Arial, sans-serif; letter-spacing: 1px;">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-3" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>
        <div class="d-grid mb-3">
          <%= f.submit "Log in", class: "btn btn-primary rounded-3 fw-bold px-4" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
