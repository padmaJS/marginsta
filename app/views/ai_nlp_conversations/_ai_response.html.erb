<div class="d-flex justify-content-start mb-3" data-turbo-permanent id="<%= dom_id(conversation, :ai_response) %>">
  <div class="bg-white rounded-4 px-4 py-3 shadow-sm border" style="max-width: 80%;">
    <div class="d-flex align-items-start gap-2">
      <i class="bi bi-robot text-primary" style="font-size: 1.2rem;"></i>
      <div class="flex-grow-1">
        <strong class="text-primary">AI Assistant</strong>
        <!-- SQL Query -->
        <% if conversation.sql_query.present? %>
          <div class="mt-2 mb-2">
            <small class="text-muted d-block mb-1">Generated SQL:</small>
            <div class="bg-light rounded-3 p-2 font-monospace small text-dark" style="overflow-x: auto;">
              <%= conversation.sql_query %>
            </div>
          </div>
        <% end %>
        <!-- Results -->
        <% if conversation.response.present? %>
          <div class="mt-2">
            <small class="text-muted d-block mb-1">Results:</small>
            <% 
              results = JSON.parse(conversation.response) rescue []
              if results.any?
            %>
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
              <table class="table table-sm table-bordered table-hover mb-0">
                <thead class="table-light sticky-top">
                  <tr>
                    <% results.first.keys.each do |key| %>
                      <th class="small"><%= key %></th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% results.each do |row| %>
                    <tr>
                      <% row.values.each do |value| %>
                        <td class="small"><%= value %></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <small class="text-muted mt-1 d-block"><%= results.count %> row(s) returned</small>
          <% else %>
            <p class="text-muted mb-0 small">No results found</p>
          <% end %>
        </div>
      <% end %>
      <small class="text-muted d-block mt-2"><%= time_ago_in_words(conversation.created_at) %> ago</small>
    </div>
  </div>
</div>
</div>
