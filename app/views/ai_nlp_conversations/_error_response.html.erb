<div class="d-flex justify-content-start mb-3" data-turbo-permanent id="<%= dom_id(conversation, :error_response) %>">
  <div class="bg-danger bg-opacity-10 rounded-4 px-4 py-3 shadow-sm border border-danger" style="max-width: 80%;">
    <div class="d-flex align-items-start gap-2">
      <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 1.2rem;"></i>
      <div class="flex-grow-1">
        <strong class="text-danger">Error</strong>
        <!-- SQL Query if available -->
        <% if conversation.sql_query.present? %>
          <div class="mt-2 mb-2">
            <small class="text-muted d-block mb-1">Generated SQL:</small>
            <div class="bg-light rounded-3 p-2 font-monospace small text-dark" style="overflow-x: auto;">
              <%= conversation.sql_query %>
            </div>
          </div>
        <% end %>
        <!-- Error Message -->
        <div class="mt-2">
          <small class="text-muted d-block mb-1">Error Details:</small>
          <p class="text-danger mb-0 small"><%= conversation.error %></p>
        </div>
        <small class="text-muted d-block mt-2"><%= time_ago_in_words(conversation.created_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
