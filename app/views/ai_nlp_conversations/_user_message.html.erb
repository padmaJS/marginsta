<div class="d-flex justify-content-end mb-3" data-turbo-permanent id="<%= dom_id(conversation, :user_message) %>">
  <div class="bg-primary text-white rounded-4 px-4 py-2 shadow-sm" style="max-width: 70%;">
    <div class="d-flex align-items-start gap-2">
      <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
      <div class="flex-grow-1">
        <p class="mb-0"><%= conversation.query %></p>
        <small class="opacity-75"><%= time_ago_in_words(conversation.created_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
