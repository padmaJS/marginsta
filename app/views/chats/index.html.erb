<div class="container-fluid mt-4" style="max-width: 1200px;">
  <div class="row justify-content-center" style="min-height: 80vh;">
    <!-- Sidebar: Chats and Suggestions -->
    <div class="col-12 col-md-5 col-lg-4 d-flex flex-column" style="min-width: 320px; max-width: 400px; height: 80vh;">
      <div class="card flex-grow-1 mb-3" style="min-height: 0;">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Messages</h5>
        </div>
        <div class="card-body p-0 overflow-auto" style="max-height: 45vh;">
          <% if @chats.any? %>
            <div class="list-group list-group-flush">
              <% @chats.each do |chat| %>
                <%= link_to chat_path(chat), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex align-items-center">
                    <%= profile_avatar_select(chat.other_user(current_user), :xs) %>
                    <div class="flex-grow-1">
                      <h6 class="mb-0"><%= chat.other_user(current_user).user_name %></h6>
                      <small class="text-muted">
                        <% if chat.last_message %>
                          <%= truncate(chat.last_message.content, length: 25) %>
                        <% else %>
                          Start a conversation
                        <% end %>
                      </small>
                    </div>
                    <span class="online-indicator online-<%= chat.other_user(current_user).id %>"></span>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No messages yet</p>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Suggested Users -->
      <% if @suggested_users.any? %>
        <div class="card" style="max-height: 30vh; overflow:auto;">
          <div class="card-header">
            <h6 class="mb-0">Suggested</h6>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% @suggested_users.each do |user| %>
                <div class="list-group-item">
                  <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                      <%= profile_avatar_select(user, :xs) %>
                      <span><%= user.user_name %></span>
                    </div>
                    <%= button_to "Message", start_chat_with_path(user), 
                                  method: :post, 
                                  class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Main: Empty State or Chat -->
    <div class="col-12 col-md-7 col-lg-8 d-flex align-items-center justify-content-center" style="min-height: 80vh;">
      <div class="card w-100" style="min-height: 350px; max-height: 70vh;">
        <div class="card-body text-center text-muted d-flex flex-column justify-content-center align-items-center h-100 py-5">
          <i class="fas fa-comments fa-3x mb-3"></i>
          <p class="mb-0">Select a conversation or start a new one</p>
        </div>
      </div>
    </div>
  </div>
</div>