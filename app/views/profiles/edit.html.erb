<div class="card shadow-sm border-0 rounded-4">
  <div class="card-body p-4">
    <h3 class="mb-4 fw-bold text-center">Edit Profile</h3>
    <%= form_for @user, url: update_profile_path(@user.user_name), method: :post, html: { multipart: true } do |f| %>
      <div class="mb-3">
        <div class="mb-2 d-flex justify-content-center">
          <%= profile_avatar_select(@user, :medium) %>
        </div>
        <%= f.file_field :profile_picture, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :bio, "Bio", class: "form-label fw-semibold" %>
        <%= f.text_area :bio, value: @user.bio, class: "form-control", rows: 3, placeholder: "Tell us about yourself..." %>
      </div>
      <div class="d-grid mt-4">
        <%= f.submit "Update Profile", class: "btn btn-primary btn-lg" %>
      </div>
      <div class="d-grid mt-4">
        <%= link_to "Cancel", profile_path(@user.user_name), class: "btn btn-secondary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>