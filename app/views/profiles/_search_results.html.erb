<% if query.present? %>
  <% if users.any? %>
    <div class="list-group list-group-flush">
      <% users.each do |user| %>
        <%= link_to profile_path(user.user_name), class: "list-group-item list-group-item-action d-flex align-items-center gap-3", data: { turbo_frame: "_top" } do %>
          <%= profile_avatar_select(user, :xs) %>
          <span class="fw-bold"><%= user.user_name %></span>
          <% if user == current_user %>
            <span class="badge bg-secondary ms-2">You</span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">No users found for "<strong><%= query %></strong>"</p>
  <% end %>
<% else %>
  <p class="text-muted text-center">Start typing to search for users...</p>
<% end %>