<% if user_signed_in? && post.liked_by?(current_user) %>
  <%= link_to post_like_path(post, post.likes.find_by(user: current_user)), 
      data: { turbo_method: :delete },
      class: "btn btn-link p-0 text-danger" do %>
    <i class="bi bi-heart-fill fs-2"></i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), 
      data: { turbo_method: :post },
      class: "btn btn-link p-0" do %>
    <i class="bi bi-heart fs-2"></i>
  <% end %>
<% end %>
<br>
<span class="ms-2">
  <%= link_to post_likers_path(post), data: { turbo_frame: "modal" } do %>
    <%= post.likes.count %> likes
  <% end %>
</span>
<span class="ms-2"><%= post.comments.count %> comments</span>