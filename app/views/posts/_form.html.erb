<div class="d-flex justify-content-center">
  <div class="card shadow-sm border-0 w-100" style="max-width: 500px;">
    <div class="card-body">
      <h5 class="card-title mb-3">
        <%= local_assigns[:form_title] || (is_edit ? "Update Post" : "Create New Post") %>
      </h5>
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :caption, class: "form-label" %>
          <%= f.text_area :caption, class: "form-control", rows: 2 %>
        </div>
        <div class="mb-3">
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class="row mt-3 justify-content-center">
          <div class="col-6 d-grid">
            <%= f.submit (is_edit ? "Update Post" : "Create Post"), class: "btn btn-primary px-4" %>
          </div>
          <div class="col-6 d-grid">
            <%= link_to "Cancel", (is_edit ? post_path(@post) : root_path), class: "btn btn-secondary px-4" %>
          </div>
        </div>
        <% if is_edit %>
          <hr class="my-4 w-100">
          <div class="d-flex justify-content-center mt-3">
            <%= link_to "Delete Post", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger px-4" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>